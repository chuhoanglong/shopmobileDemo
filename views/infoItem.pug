doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  link(rel='stylesheet', href='grid.css')
  link(rel='stylesheet', href='component.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Quicksand&display=swap')
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.2/css/all.css')
  link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
  
  title infoItem
body
  .wrapper
    .header
      .menu
        .hasmenu
          a(href='/Home') Home
        .hasmenu
          a(href='#') Profile
        .hasmenu
          a(href='/Home/Apple') Apple
        .hasmenu
          a(href='/Home/SamSung') SamSung
        .hasmenu
          a(href='/Home/Ipad') Ipad
        .hasmenu
          a(href='/Home/Laptop') Laptop
        .hasmenu
          a(href='/cart') Cart
            i.fas.fa-shopping-cart.fa-sm
            sup=count
        .login(style="position:relative;left:50%")
          if(!user.name)
            a(href='/login') Login        
          else
            a(href='#')=user.name
            br
            a(href='/login') Logout

    .infoItem
      div.imageMaster
        img(src=item.image)
      div.itemId
        div#nameItem
          h3=item.name_item + "        "
            span.badge.badge-secondary  New
        div#idItem
          h6 SKU : #{item.code}
        div#priceItem
          h4=item.price_item
          p(style='font-style:italic; font-size:11px; color:#AAA') Miễn Phí Giao Hàng ( COD free )
        div.quantity-area.clearflix.d-flex.flex-row
          form(action='/add/' + item.id, method='GET')
            input.qty-btn#sub(type='button',value='-')
            input.quantity-selector#quantity(type='text',name='quantity', disabled = false,value='1',style='text-align: center')
            input.qty-btn#add(type='button',value='+',onclick='add')
            button.btn-addtocart#add-to-cart(type='submit') Them Vao Gio Hang
            i.fas.fa-shopping-cart.fa-sm
      .specifications
        div.describe.card.border-light.mb-3
          div.card-header Thông Số Kỹ Thuật
          ul.list-group.list-group-flush
            li.list-group-item
              h6.card-title Thông số cơ bản
              p.card-text=item.note
    .footer
      .members
        h3 Group Members
        h6
          |Lê Văn Tư
          br
          | Nghiêm Linh Sơn
          br
          | Phạm Ngọc Thạch
          br
          | Dương Đức Lương
          br
          | Chu Hoàng Long
      .iconFooter
        div
          i.fab.fa-facebook-square.fa-3x
        div
          i.fab.fa-instagram.fa-3x
        div
          i.fab.fa-behance.fa-3x
        div
          i.fab.fa-twitter-square.fa-3x
  script(type='text/javascript',language="javascript",src="./javascript/quantityAdd.js")
  
